C

document.getElementById("calculateButton").addEventListener("click", function () {
    const sleepTime = document.getElementById("sleepTime").value;
    const sleepDuration = parseInt(document.getElementById("sleepDuration").value);
    const wakeUpTime = document.getElementById("wakeUpTime").value;

    if (sleepTime && sleepDuration) {
        const sleepTimeMinutes = getMinutes(sleepTime);
        const wakeUpTimeMinutes = sleepTimeMinutes + sleepDuration;
        const calculatedWakeUpTime = formatTime(wakeUpTimeMinutes);
        document.getElementById("result").textContent = `To wake up at ${wakeUpTime}, you should sleep at ${calculatedWakeUpTime}`;
    } else if (wakeUpTime && sleepDuration) {
        const wakeUpTimeMinutes = getMinutes(wakeUpTime);
        const sleepTimeMinutes = wakeUpTimeMinutes - sleepDuration;
        const calculatedSleepTime = formatTime(sleepTimeMinutes);
        document.getElementById("result").textContent = `If you want to wake up at ${wakeUpTime}, you should sleep at ${calculatedSleepTime}`;
    } else {
        document.getElementById("result").textContent = "Please fill in the required fields.";
    }
});

function getMinutes(time) {
    const [hours, minutes] = time.split(":");
    return parseInt(hours) * 60 + parseInt(minutes);
}

function formatTime(minutes) {
    const hours = Math.floor(minutes / 60);
    const mins = minutes % 60;
    return `${String(hours).padStart(2, "0")}:${String(mins).padStart(2, "0")}`;
}
